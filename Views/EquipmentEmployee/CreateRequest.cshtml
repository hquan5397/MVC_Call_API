
@model Token_Based_Authentication_17_3.Models.TypeRequestViewModel
@{
    ViewBag.Title = "CreateRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateRequest</h2>

@using (Html.BeginForm()) 
{
    @*@Html.AntiForgeryToken()*@
    
<div class="form-horizontal">
    <h4>RequestViewModel</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="form-group">
        @Html.LabelFor(model => model.Requests.EquipmentType, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model =>model.Requests.EquipmentType, ((List<string>)Model.Types).Select(m => new SelectListItem {Text = m,Value=m }))
            @Html.ValidationMessageFor(model => model.Requests.EquipmentType, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>
