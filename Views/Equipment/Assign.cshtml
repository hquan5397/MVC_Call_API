@model Token_Based_Authentication_17_3.Models.EquipEmployViewModel

@{
    ViewBag.Title = "Assign";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-horizontal">
    <h4>EquipEmpViewModel</h4>
    <hr />
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IDEquipment)
    <div class="form-group">
        @Html.LabelFor(model => model.IDEquipment, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.IDEquipment)
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Emps)
                    {
                        <tr>
                            <th>@item.Username</th>                          
                            <th>
                                @using (@Html.BeginForm("Assign","Equipment",FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="IDEquip" value="@Model.IDEquipment" />
                                    <input type="hidden" name="UserName" value="@item.Username" />
                                    <input type="submit" value="Add" class="btn btn-primary" />
                                }
                            </th>
                        </tr>

                    }

                </tbody>

            </table>
        </div>
    </div>

</div>
