@model IList<Token_Based_Authentication_17_3.Models.EquipmentViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.ValidationSummary(false)
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Equiments Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered" id="dataTable" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>EmpID</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID</th>
                        <th>Type</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>EmpID</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Type</td>
                            <td>@item.Name</td>
                            <td>@item.Status</td>
                            <td>@item.Description</td>
                            <td>@item.UserName</td>
                            <th>
                                @Html.ActionLink("Edit", "Edit", "Equipment", new { ID = @item.ID }, new { @class = "btn btn-primary" })                    
                                @Ajax.ActionLink("Delele", "Delete", "Equipment", new { ID = @item.ID },new AjaxOptions {
                                    UpdateTargetId = "dataTable",
                                    InsertionMode = InsertionMode.Replace,
                                    HttpMethod = "GET"
                                } ,new { @class = "btn btn-dark" })
                                @Html.ActionLink("Assign","Assign","Equipment",new { ID=@item.ID},new {@class="btn btn-success" })
                            </th>
                        </tr>
                    }

                </tbody>
            </table>
            @Html.ActionLink("Create Equipment","Create","Equipment",null,new { @class="btn btn-primary"})
            @Html.ActionLink("Show Assigned Equipments", "EmployeeInfo", null, new { @class="btn btn-dark"})
            @Html.ActionLink("Show Requests", "ShowRequests", "Equipment", null, new { @class="btn btn-warning"})
            @Html.ActionLink("Create employee account", "Register", "Login", null, new { @class="btn btn-primary"})
        </div>
    </div>
</div>